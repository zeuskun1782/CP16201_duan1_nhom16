<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:background="@drawable/custom_linearlayout"
        android:paddingTop="10dp"
        android:layout_height="170dp">
        <LinearLayout
            android:layout_width="330dp"
            android:layout_marginTop="5dp"
            android:layout_height="140dp"
            android:paddingTop="5dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/tv_maNV"
                android:textSize="15dp"
                android:paddingLeft="15dp"
                android:textStyle="bold|normal"
                android:text="Mã Khách hàng"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:textSize="18dp"
                android:paddingLeft="15dp"
                android:id="@+id/tv_tenNV"
                android:textStyle="bold|normal"
                android:text="Tên Khách hàng"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:text="Năm sinh"
                android:paddingLeft="15dp"
                android:textStyle="bold|normal"
                android:id="@+id/tv_namsinhNV"
                android:textSize="15dp"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:text="Giới tính "
                android:textStyle="bold|normal"
                android:id="@+id/tv_gioiTinh"
                android:textSize="15dp"
                android:paddingLeft="15dp"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:text="Điện thoại"
                android:paddingLeft="15dp"
                android:textStyle="bold|normal"
                android:id="@+id/tv_dienThoaiNV"
                android:textSize="15dp"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:text="Địa chỉ"
                android:textStyle="bold|normal"
                android:paddingLeft="15dp"
                android:id="@+id/_tv_diaChiNV"
                android:textSize="15dp"
                android:layout_height="wrap_content">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="50dp"
            android:gravity="center"
            android:layout_marginTop="50dp"
            android:layout_height="50dp">
            <ImageView
                android:layout_width="50dp"
                android:id="@+id/image_xoaNV"
                android:src="@drawable/ic_deltet"
                android:backgroundTint="#00BFFF"
                android:textStyle="normal|bold"
                android:text="Xóa"
                android:layout_height="50dp">
            </ImageView>
        </LinearLayout></LinearLayout>


</LinearLayout>