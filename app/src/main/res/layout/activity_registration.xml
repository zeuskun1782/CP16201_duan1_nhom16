<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".Head.Registration">
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="100dp">
        <TextView
            android:layout_width="wrap_content"
            android:text="Đăng ký"
            android:textStyle="normal|bold"
            android:textSize="40dp"
            android:layout_height="wrap_content">
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <EditText
            android:layout_width="350dp"
            android:drawableStart="@drawable/name"
            android:id="@+id/ed_taiKhoan"
            android:paddingLeft="10dp"
            android:background="@drawable/custom_editext"
            android:hint="Tên tài khoản"
            android:layout_height="45dp">
        </EditText>
        <EditText
            android:layout_width="350dp"
            android:hint="Họ và tên"
            android:paddingLeft="10dp"
            android:background="@drawable/custom_editext"
            android:drawableStart="@drawable/ic_adduser"
            android:id="@+id/ed_hovaten"
            android:layout_marginTop="25dp"
            android:layout_height="45dp">
        </EditText>
        <EditText
            android:layout_width="350dp"
            android:layout_marginTop="25dp"
            android:paddingLeft="10dp"
            android:background="@drawable/custom_editext"
            android:drawableStart="@drawable/ic_phone"
            android:id="@+id/ed_dienthoaiDK"
            android:hint="Điện thoại"
            android:layout_height="45dp">
        </EditText>
        <EditText
            android:layout_width="350dp"
            android:paddingLeft="10dp"
            android:background="@drawable/custom_editext"
            android:drawableStart="@drawable/ic_matkhau"
            android:hint="Mật khẩu"
            android:id="@+id/ed_matkhauDK"
            android:layout_marginTop="25dp"
            android:layout_height="45dp">
        </EditText>
        <EditText
            android:layout_width="350dp"
            android:hint="Nhập lại mật khẩu"
            android:drawableStart="@drawable/ic_matkhau"
            android:id="@+id/ed_nhaplaiMK"
            android:paddingLeft="10dp"
            android:background="@drawable/custom_editext"
            android:layout_marginTop="25dp"
            android:layout_height="45dp">
        </EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="25dp"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="150dp"
            android:text="Đăng ký"
            android:id="@+id/btn_dangkyTK"
            android:backgroundTint="#00BFFF"
            android:layout_marginLeft="30dp"
            android:layout_height="40dp">
        </Button>
        <Button
            android:layout_width="150dp"
            android:text="Hủy"
            android:id="@+id/btn_huyDK"
            android:backgroundTint="#00BFFF"
            android:layout_marginLeft="50dp"
            android:layout_height="40dp">
        </Button>
    </LinearLayout>
</LinearLayout>