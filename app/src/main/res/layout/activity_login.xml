<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"

    android:layout_height="match_parent"
    tools:context=".Head.Login">
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_margin="100dp"
        android:layout_height="100dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Đăng nhập"
            android:textStyle="bold|normal|italic"
            android:textSize="45dp">
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:textSize="20dp"
            android:layout_marginLeft="55dp"
            android:textStyle="normal|bold"
            android:layout_height="wrap_content"
            android:text="Đăng nhập">
        </TextView>
        <EditText
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:id="@+id/ed_dangNhap"
            android:paddingLeft="20dp"
            android:background="@drawable/custom_editext"
            android:drawableStart="@drawable/ic_taikhoan"
            android:layout_marginLeft="55dp"
            android:hint="Tên đăng nhập">
        </EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity=""
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:textSize="20dp"
            android:textStyle="normal|bold"
            android:layout_marginLeft="55dp"
            android:layout_height="wrap_content"
            android:text="Mật khẩu">
        </TextView>
        <EditText
            android:layout_width="300dp"
            android:layout_marginLeft="55dp"
            android:inputType="textPassword"
            android:id="@+id/ed_matKhau"
            android:paddingLeft="20dp"
            android:background="@drawable/custom_editext"
            android:drawableStart="@drawable/ic_matkhau"
            android:layout_height="45dp"
            android:hint="Mật khẩu">
        </EditText>
    </LinearLayout>
    <CheckBox
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:id="@+id/cbx_luuMK"
        android:layout_marginLeft="55dp"
        android:text="Lưu mật khẩu">
    </CheckBox>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="130dp"
            android:layout_marginLeft="60dp"
            android:layout_height="40dp"
            android:id="@+id/btn_dangNhapMK"
            android:textStyle="normal|bold"
            android:drawableStart="@drawable/xe"
            android:backgroundTint="#00BFFF"
            android:text="Đăng nhập">
        </Button>
        <Button
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:id="@+id/ed_dangky"
            android:textStyle="normal|bold"
            android:backgroundTint="#00BFFF"
            android:layout_marginLeft="30dp"
            android:text="Đăng ký">
        </Button>
    </LinearLayout>
</LinearLayout>