<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="250dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="40dp"
                android:src="@drawable/ic_taikhoan"
                android:layout_height="40dp">
            </ImageView>
            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Tài Khoản"
                android:textSize="35dp"
                android:textStyle="bold|normal">
            </TextView>
        </LinearLayout>
        <EditText
            android:drawableStart="@drawable/name"
            android:layout_width="200dp"
            android:id="@+id/dialog_tenDN"
            android:layout_marginTop="10dp"
            android:hint="Tên đăng nhập"
            android:layout_height="50dp">
        </EditText>
        <EditText
            android:drawableStart="@drawable/ic_tttt"
            android:layout_width="200dp"
            android:layout_marginTop="10dp"
            android:id="@+id/dialog_hoten"
            android:hint="Họ và tên"
            android:layout_height="50dp">
        </EditText>
        <EditText
            android:drawableStart="@drawable/ic_phone"
            android:layout_width="200dp"
            android:layout_marginTop="10dp"
            android:hint="Điện thoại "
            android:inputType="number"
            android:id="@+id/dialog_dienthoai"
            android:layout_height="50dp">
        </EditText>

        <EditText
            android:id="@+id/dialog_MK"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:drawableStart="@drawable/ic_mk"
            android:hint="Mật khẩu"
            android:layout_marginTop="10dp"
            android:inputType="textPassword"></EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="normal|bold"
            android:layout_marginRight="20dp"
            android:backgroundTint="#1E90FF"
            android:text="Thêm"
            android:id="@+id/btn_themTK">
        </Button>
        <Button
            android:layout_width="wrap_content"
            android:backgroundTint="#1E90FF"
            android:textStyle="normal|bold"
            android:layout_height="wrap_content"
            android:text="Hủy"
            android:id="@+id/btn_huyTK">
        </Button>
    </LinearLayout>
</LinearLayout>